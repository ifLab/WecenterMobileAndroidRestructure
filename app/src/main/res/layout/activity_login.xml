<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background_blur"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000">
        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="用户名"
            android:textColorHint="@color/login_txt_color"
            android:textColor="@color/login_txt_color"
            android:drawableLeft="@drawable/ic_login_user"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="50dp"
            android:hint="密码"
            android:drawableLeft="@drawable/ic_login_password"
            android:drawablePadding="10dp"
            android:layout_alignTop="@+id/edt_user_name"
            android:layout_alignLeft="@+id/edt_user_name"
            android:layout_alignStart="@+id/edt_user_name"
            android:layout_alignRight="@+id/edt_user_name"
            android:layout_alignEnd="@+id/edt_user_name"
            android:inputType="textPassword"
            android:textColor="@color/login_txt_color"
            android:id="@+id/edt_passwd"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:background="@drawable/login_buttton_selector"
            android:layout_below="@+id/edt_passwd"
            android:layout_alignLeft="@+id/edt_passwd"
            android:layout_alignStart="@+id/edt_passwd"
            android:layout_alignRight="@+id/edt_passwd"
            android:layout_alignEnd="@+id/edt_passwd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/btn_register"
            android:textSize="15sp"
            android:background="@drawable/login_buttton_selector"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_login"
            android:layout_alignLeft="@+id/btn_login"
            android:layout_alignStart="@+id/btn_login"
            android:layout_alignRight="@+id/btn_login"
            android:layout_alignEnd="@+id/btn_login" />

    </RelativeLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="70sp"
            android:textColor="@color/login_button_nofocus"
            android:text="WeCenter"/>
    </com.facebook.shimmer.ShimmerFrameLayout>
</FrameLayout>